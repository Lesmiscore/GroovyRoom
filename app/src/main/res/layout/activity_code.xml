<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nao20010128nao.GroovyRoom.CodeActivity"
        android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10" android:id="@+id/code"
            android:typeface="monospace"
            android:hint="@string/type_code_here"
            android:gravity="top"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

    <com.nao20010128nao.GroovyRoom.view.TextInsertView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inserter"/>

</LinearLayout>
