<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.nao20010128nao.GroovyRoom">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name=".TheApplication">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".CodeActivity"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".SaveActivity">
        </activity>
        <activity android:name=".LoadActivity">
        </activity>
        <activity android:name=".ExecutionActivity">
        </activity>
        <activity android:name=".LogCatActivity">
        </activity>
        <activity
                android:name=".settings.SettingListActivity"
                android:label="@string/settings"
                android:parentActivityName=".LoadActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name=".settings.SettingDetailActivity"
                android:label="@string/settings"
                android:parentActivityName=".settings.SettingListActivity"
                android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>